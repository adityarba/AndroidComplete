<?xml version="1.0" encoding="utf-8"?>


<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.asp.androidcomplete.MainActivity"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Life Cycle"
                android:id="@+id/main_activity_lifecycle_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera- Simple Capture"
                android:id="@+id/main_camera_simple_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Array Adapter"
                android:id="@+id/main_adapter_array_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom List Array Adapter"
                android:id="@+id/main_custom_adapter_array_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input Controllers"
                android:id="@+id/main_input_controller_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Bar"
                android:id="@+id/main_menu_bar_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Page"
                android:id="@+id/main_login_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Notification"
                android:id="@+id/main_show_notification_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SVG Graphics"
                android:id="@+id/main_svg_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dialogue Boxes"
                android:id="@+id/main_dialog_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FrameLayout"
                android:id="@+id/main_frame_layout_btn"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slide Screens"
                android:id="@+id/main_slide_screen_btn"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment - Simple"
                android:id="@+id/main_fragment_simple_btn"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment - Transaction"
                android:id="@+id/main_fragment_transaction_btn"
                />

        </LinearLayout>
    </ScrollView>


